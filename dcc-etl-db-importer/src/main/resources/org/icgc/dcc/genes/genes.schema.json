{
  "$schema":"http://json-schema.org/draft-03/schema#",
  "id":"http://schema.dcc.icgc.org/genes.schema.json#",
  "title":"DCC gene model schema",
  "description":"Schema used to define and validate gene model documents",
  "type":"object",
  "properties":{
    "_gene_id":{
      "type":"string",
      "id":"_gene_id",
      "required":true
    },
    "canonical_transcript_id":{
      "type":"string",
      "id":"canonical_transcript_id",
      "required":true
    },
    "chromosome":{
      "type":"string",
      "id":"chromosome",
      "required":false
    },
    "end":{
      "type":"number",
      "id":"end",
      "required":false
    },
    "name":{
      "type":"string",
      "id":"name",
      "required":false
    },
    "start":{
      "type":"number",
      "id":"start",
      "required":false
    },
    "strand":{
      "type":"number",
      "id":"strand",
      "required":false
    },
    "symbol":{
      "type":"string",
      "id":"symbol",
      "required":false
    },
    "symbol":{
      "type":"string",
      "id":"description",
      "required":false
    },
    "synonyms":{
      "type":"array",
      "id":"synonyms",
      "required":false,
      "items":{
        "type":"string",
        "id":"0",
        "uniqueItems":true,
        "minItems":1,
        "required":true
      }
    },
    "transcripts":{
      "type":"array",
      "id":"transcripts",
      "required":false,
      "items":{
        "$ref":"#/definitions/transcript"
      }
    },
    "external_db_ids":{
      "type":["object","null"],
      "id":"external_db_ids",
      "required":false
    }
  },
  "definitions":{
    "transcript":{
      "type":"object",
      "properties":{
        "domains":{
          "type":"array",
          "id":"domains",
          "required":false,
          "items":{
            "$ref":"#/definitions/domain"
          }
        },
        "end_exon":{
          "type":"number",
          "id":"end_exon",
          "required":false
        },
        "exons":{
          "type":"array",
          "id":"exons",
          "required":false,
          "items":{
            "$ref":"#/definitions/exon"
          }
        },
        "is_canonical":{
          "type":"boolean",
          "id":"is_canonical",
          "required":false
        },
        "length_amino_acid":{
          "type":"number",
          "id":"length_amino_acid",
          "required":false
        },
        "length_cds":{
          "type":"number",
          "id":"length_cds",
          "required":false
        },
        "length":{
          "type":"number",
          "id":"length",
          "required":false
        },
        "number_of_exons":{
          "type":"number",
          "id":"number_of_exons",
          "required":false
        },
        "seq_exon_end":{
          "type":"number",
          "id":"seq_exon_end",
          "required":false
        },
        "seq_exon_start":{
          "type":"number",
          "id":"seq_exon_start",
          "required":false
        },
        "start_exon":{
          "type":"number",
          "id":"start_exon",
          "required":false
        },
        "id":{
          "type":"string",
          "id":"id",
          "required":true
        },
        "name":{
          "type":"string",
          "id":"name",
          "required":false
        },
        "translation_id":{
          "type":"string",
          "id":"translation_id",
          "required":false
        }
      }
    },
    "exon":{
      "type":"object",
      "required":false,
      "properties":{
        "end_phase":{
          "type":"number",
          "id":"end_phase",
          "required":false
        },
        "end":{
          "type":"number",
          "id":"end",
          "required":false
        },
        "start_phase":{
          "type":"number",
          "id":"start_phase",
          "required":false
        },
        "start":{
          "type":"number",
          "id":"start",
          "required":false
        }
      }
    },
    "domain":{
      "type":"object",
      "required":false,
      "properties":{
        "description":{
          "type":"string",
          "id":"description",
          "required":false
        },
        "end":{
          "type":"number",
          "id":"end",
          "required":false
        },
        "gff_source":{
          "type":"string",
          "id":"gff_source",
          "required":false
        },
        "hit_name":{
          "type":"string",
          "id":"hit_name",
          "required":false
        },
        "interpro_id":{
          "type":"string",
          "id":"interpro_id",
          "required":false
        },
        "start":{
          "type":"number",
          "id":"start",
          "required":false
        }
      }
    }
  }
}